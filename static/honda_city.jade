extends ./layout/page.jade

block content
  
  .card
    .row
      .col-md-8
        #slider.flexslider
          ul.slides
            each val in [1, 2]
              - var model = 7;
              li
                img(src='assets/images/models/list/'+model+'/color/paint_1/'+val+'.png')
          //-ul
        //-#slider
        #carousel.flexslider
          ul.slides
            each val in [1, 2]
              - var model = 7;
              li
                img(src='assets/images/models/list/'+model+'/color/paint_1/'+val+'.png')
          //-ul
        //-#carousel
      //-.col-md-8
      .col-md-4
        h1 City

        br
        
        include includes/product_details.jade
        
        hr
        
        strong Colors
        .paint
          .paint--colors.city
            - var n = 0
            //- the variable "c" is in "header_page.jade"
            while n < 47
              .colors(data-color=n, class="_"+n, data-hex=c[n], data-code=code[n])
              - n++
          //-.paint--colors
        //-.paint
        
        hr
        
        strong Variants
        ul
          li 1.5 E MT
          li 1.5 E CVT
          li 1.5 E CVT Special Edition
          li 1.5 VX Navi CVT
          li 1.5 VX+ Navi CVT
        
